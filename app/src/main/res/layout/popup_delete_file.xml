<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="删除文件"
        android:textColor="#ff000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="10天内可在回收站中找回已删除文件"
        android:textColor="#8A8A8D"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#fff0f0f0" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners_10_fff0f0f0"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_delete_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners_10_fffdd329"
            android:gravity="center"
            android:text="确认删除"
            android:textColor="#ff000000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
