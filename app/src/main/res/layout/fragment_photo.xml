<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyPhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:paddingLeft="13dp"
        android:paddingRight="13dp" />

    <LinearLayout
        android:id="@+id/llBottomSelectPath"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/upload_photo_bottom_bg"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="选择上传位置"
            android:textColor="#4A4A4A"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.ehualu.calabashandroid.widget.DrawableCenterRadioButton
                android:id="@+id/tvSelectPosition"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/tv_grey_bg"
                android:button="@null"
                android:drawableLeft="@mipmap/icon_personal_space"
                android:drawablePadding="6dp"
                android:text="我的个人空间"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEnsure"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@drawable/tv_yellow_bg"
                android:gravity="center"
                android:text="确认"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>