<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/frg_file_table_first_row_bg">

        <TextView
            android:id="@+id/tvTimeSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/bottom_popup_time_sort_black"
            android:drawablePadding="14dp"
            android:text="按时间排序"
            android:textColor="@drawable/bottom_popup_text_color_selector"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dg01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tvTimeSort"
            android:src="@drawable/bottom_popup_duigou"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl02"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/frg_file_table_row_bg">

        <TextView
            android:id="@+id/tvNameSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/bottom_popup_name_sort_black"
            android:drawablePadding="14dp"
            android:text="按名称排序"
            android:textColor="@drawable/bottom_popup_text_color_selector"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dg02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tvNameSort"
            android:src="@drawable/bottom_popup_duigou"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl03"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tvGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableLeft="@drawable/bottom_popup_grid_black"
            android:drawablePadding="14dp"
            android:text="缩略图模式"
            android:textColor="@drawable/bottom_popup_text_color_selector"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dg03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tvGrid"
            android:src="@drawable/bottom_popup_duigou"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl04"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/frg_file_table_row_bg">

        <TextView
            android:id="@+id/tvList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/bottom_popup_list_black"
            android:drawablePadding="14dp"
            android:text="列表模式&#12288;"
            android:textColor="@drawable/bottom_popup_text_color_selector"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dg04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tvList"
            android:src="@drawable/bottom_popup_duigou"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl05"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/frg_file_table_row_bg">

        <TextView
            android:id="@+id/tvFileSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/bottom_popup_select_black"
            android:drawablePadding="14dp"
            android:text="选择文件&#12288;"
            android:textColor="@drawable/bottom_popup_text_color_selector"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>