<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="285dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="文件将提取至：备份恢复文件夹"
        android:textColor="#ff000000"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="21dp"
        android:src="@mipmap/file_icon_restore" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="备份恢复"
        android:textColor="#ff030303"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="14dp"
        android:background="#fff0f0f0" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners_10_fff0f0f0"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_delete_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corners_10_fffdd329"
            android:gravity="center"
            android:text="确认提取"
            android:textColor="#ff000000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
